rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all property images
    match /properties/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow read/write access for authenticated admin users
    match /{allPaths=**} {
      allow read: if true; // Public read for images
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
